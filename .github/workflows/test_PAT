name: Test PAT

on:
  push:
    branches:
      - main

jobs:
  test:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: List repository tags
      run: |
        curl -H "Authorization: token ${{ secrets.PAT }}" https://api.github.com/repos/tbates097/demo-deployment/tags
